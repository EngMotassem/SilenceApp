<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
        >


    <TextView
        android:id="@+id/textViewReminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:text="REMINDER"

        android:textColor="#4d4d4d"
        android:drawableBottom="@drawable/ic_notifications_2x"
        />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="Reminder Title"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textViewReminder"
        />

    <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="Reminder Description"
        android:maxLines="1"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textViewTitle"

        />



        <Button
            android:id="@+id/buttonDismiss"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:background="@color/splashgreenback"
            android:textColor="@color/white"
            android:text="DISMISS"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            />



        </RelativeLayout>
