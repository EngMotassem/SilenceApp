<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_select_avatar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="techheromanish.example.com.silenceapp.activities.SelectAvatarActivity"
    android:background="@color/splashgreenback"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/relativeProgressbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/splashgreenback"
        android:visibility="gone"
        >
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/splashgreenback"
            />
    </RelativeLayout>



    <LinearLayout
        android:id="@+id/linearLayoutTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"

        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/yellow"
            android:text="Profile Avatar"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please select an avatar for your profile."
            android:textSize="15dp"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:id="@+id/textView2"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/linearLayoutTop"
        android:layout_centerVertical="true"
        android:layout_marginTop="50dp"
        >

        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/profile"
            app:civ_border_color="#EEEEEE"
            app:civ_border_width="4dp"
            android:layout_gravity="center_horizontal"
            app:civ_shadow="true"
            app:civ_shadow_radius="10"
            app:civ_shadow_color="#8BC34A"
            android:layout_centerHorizontal="true"
            android:id="@+id/circularImageView"
            android:layout_marginTop="20dp"

            />


        <Button
            android:id="@+id/buttonSetMeUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/textview_selector"
            android:text="SET ME UP"
            android:layout_below="@+id/circularImageView"
            android:background="@drawable/button_selector"

            />




    </LinearLayout>








</LinearLayout>
